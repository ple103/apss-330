<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:mewmont"
             x:Class="mewmont.JoinPrivateStreamPage">
    <ContentPage.Content>
        <StackLayout Padding="10, 0" BackgroundColor="{StaticResource PanelBackgroundColor}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Label Text="&#x0A;Join a current Stream &#x0A;"
                   HorizontalOptions="Center" 
                   TextColor="{StaticResource TextColor}"
                   FontAttributes="Bold"/>
            <Label Text="&#x0A; &#x0A; &#x0A; &#x0A; &#x0A; &#x0A; &#x0A; &#x0A; &#x0A;Enter a private room passkey"
                   HorizontalOptions="Center"
                       TextColor="{StaticResource TextColor}"/>
            <Entry x:Name="PasskeyEntry"  
                   TextColor="{StaticResource TextColor}"
                   PlaceholderColor="White"/>

            <Label Text="&#x0A; &#x0A; &#x0A; &#x0A; &#x0A;By clicking start, you hearby declare that you are responsible for the content you share to other users and this platform. If any prohibited content is showed and legal action is taken then you will be responsible according to your country's laws. You also hearby agree that you are responsible for any third-party ads are shown in the stream (from the video) and Streamr will not be held responsible, should there be any legal issues and action takes place."
                   TextColor="White"/>
            <Button Pressed="EnterBtn_Pressed"
                    Text="Start"
                    FontSize="Small"
                    TextColor="{StaticResource TextColor}"
                    BackgroundColor="{StaticResource SecondaryButtonColor}"
                    HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
